<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paymentsuccessful"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvTicketPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"

        />


    <ImageView
        android:id="@+id/ic_circle_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_check"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTicketPayment"
        android:layout_gravity="center_horizontal"
        android:layout_margin="75dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/ic_circle_check"
        android:background="@drawable/ticket_shape">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_above="@+id/ivDivider"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:text="Seat/s No."/>
            <TextView
                android:id="@+id/seatsID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:text="@string/selectedSeatIds"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:text="Total Seats"/>
            <TextView
                android:id="@+id/noOfSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:text="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Total Ticket"/>
            <TextView
                android:id="@+id/noOfTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:text="1"/>


        </GridLayout>
        <ImageView
            android:id="@+id/ivDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/tvTotal"
            android:background="@color/black"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Total Amount"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/totalam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="â‚±300.00"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="15dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"/>




    </RelativeLayout>
    <Space
        android:layout_height="24dp"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/viewTicketBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Ticket"
            android:backgroundTint="@color/orange"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>
        <Button
            android:id="@+id/homeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:backgroundTint="@color/gcash_blue"
            />

    </LinearLayout>

</LinearLayout>