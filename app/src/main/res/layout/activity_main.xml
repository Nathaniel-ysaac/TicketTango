<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"/>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/tangotitle"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@id/nowPlayingText"
        android:layout_marginBottom="-16dp"/>

    <TextView
        android:id="@+id/nowPlayingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:layout_below="@id/menuButton"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@android:color/black"
        android:layout_below="@id/nowPlayingText"
        android:layout_marginStart="32dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:id="@+id/svSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nowPlayingText"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="14dp"
        android:contentDescription="@string/movies_selection">

        <GridLayout
            android:id="@+id/glMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

        </GridLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape1">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="35dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_home"
            android:layout_marginStart="55dp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#FF6E4E"
            android:layout_marginTop="45dp"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:id="@+id/ticketIcon"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_ticket"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/ticketText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="45dp"
            android:layout_centerInParent="true"
            android:layout_alignTop="@id/ticketIcon"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_person"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"/>
    </RelativeLayout>

</RelativeLayout>