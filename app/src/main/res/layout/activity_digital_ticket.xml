<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tvTicketPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual Ticket"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp" />


    <RelativeLayout
        android:id="@+id/rlticket"
        android:layout_width="270dp"
        android:layout_height="500dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTicketPayment"
        android:background="@drawable/ticket">

    <ImageView
        android:id="@+id/ivMoviePoster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:contentDescription="@string/movie_poster"
        android:clipToOutline="true"
        android:background="@drawable/rounded_image"
        android:src="@drawable/oip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:rotation="90"/>

    <TextView
        android:id="@+id/tvMovieTicket"
        android:text="@string/movie_ticket_details"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/ivMoviePoster"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="60dp"
        android:rotation="90"/>

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/qrcode"
        android:src="@drawable/sample_qr"
        android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>