<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tvTicketPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual Ticket"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="45dp"/>


    <RelativeLayout
        android:id="@+id/rlticket"
        android:layout_width="270dp"
        android:layout_height="480dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTicketPayment"
        android:background="@drawable/ticket_shape">

        <TextView
            android:id="@+id/tvtcktMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie:"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Sausage Party"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_below="@id/tvtcktMovie"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_qr"
            android:layout_toEndOf="@id/tvtcktMovie"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-45dp"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>


</RelativeLayout>
