<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_above="@id/tangotitle"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:id="@+id/tickettitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/sigtitle"
        android:layout_toStartOf="@id/ttitle"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/ttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/sigtitle"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tangotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ango"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/sigtitle"
        android:layout_toEndOf="@id/ttitle"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/sigtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sig"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/etCreateUsername"
        android:layout_toStartOf="@id/ntitle"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/ntitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/etCreateUsername"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/uptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="up"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/poppins_semibold"
        android:layout_above="@id/etCreateUsername"
        android:layout_toEndOf="@id/ntitle"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/etCreateUsername"
        android:hint="Create Username"
        android:autofillHints="name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="gravity"
        android:textColorHint="@color/black"
        android:layout_centerVertical="true"
        android:layout_above="@id/etCreatePassword"
        android:fontFamily="@font/nunito_semibold"
        android:background="@drawable/input"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etCreatePassword"
        android:hint="Create Password"
        android:autofillHints="password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/nunito_semibold"
        android:textColorHint="@color/black"
        android:layout_marginTop="10dp"
        android:background="@drawable/input"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/etCreatePassword">

        <ImageButton
            android:id="@+id/btnSignup"
            android:contentDescription="@string/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/loginbtn" />

        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:layout_below="@id/etCreatePassword"
        android:layout_marginTop="150dp"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/white" />
    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#00FF5722"
        android:layout_toEndOf="@id/tvSignup"
        android:layout_below="@id/etCreatePassword"
        android:layout_marginTop="150dp"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tvSignup2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text=" Sign In"
        android:layout_toEndOf="@id/tvSignup"
        android:layout_below="@id/etCreatePassword"
        android:layout_marginTop="150dp"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/orange" />


</RelativeLayout>
